<!-- app/views/staffs/sessions/new.html.erb -->
<div class="mt-4">
  <section class="w-full md:w-1/2 lg:w-1/4 mx-auto bg-white rounded-lg shadow p-6">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6 text-center">Staff Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <!-- Email Field -->
      <div class="space-y-1">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <!-- Password Field -->
      <div class="space-y-1">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border-gray-300 rounded-md shadow-sm p-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Log In", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200" %>
      </div>
    <% end %>

    <!-- Shared Links -->
    <div class="mt-4 text-center text-sm text-gray-600">
      <%= render "staffs/shared/links" %>
    </div>

    <div class="flex justify-center mt-8">
      <div>
        <%= link_to 'Go to reservation', '/reservations', data: { turbo_method: :get }, class: 'bg-gray-300 hover:bg-yellow-300 text-black font-medium py-2 px-4 rounded-md transition-colors' %>
      </div>
    </div>
  </section>
</div>